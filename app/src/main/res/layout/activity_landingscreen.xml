<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Navigate back"
            android:paddingLeft="-20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/back_arrow" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_area_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/top_bar_layout"
        android:layout_above="@id/bottom_bar_view"
        android:gravity="center_horizontal"
        android:paddingTop="48dp"
        android:paddingBottom="48dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/logo_imageview_auth"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logo"
            android:contentDescription="Help My Car App Logo"
            android:scaleType="fitCenter"
            android:layout_marginBottom="48dp"/>

        <Button
            android:id="@+id/login_button_auth"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@drawable/button_bordered_background"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/signup_button_auth"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@drawable/button_bordered_background"
            android:textAllCaps="false"/>

    </LinearLayout>

    <View
        android:id="@+id/bottom_bar_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>