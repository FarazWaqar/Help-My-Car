<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2196F3"
        android:padding="12dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_arrow"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mechanic Profile"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/editBtn"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:text="Edit"
            android:textSize="14sp"
            android:textColor="#2196F3"
            android:background="@drawable/rounded_corners_white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- Profile Picture -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dummy_pic"/>

            <ImageView
                android:id="@+id/addPicBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/plux_icon"
                android:layout_gravity="bottom|end"
                android:layout_margin="6dp"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Mechanic Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="28dp"
        android:paddingTop="6dp">

        <!-- Name -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <TextView android:text="Name"
                android:textColor="#888"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView android:id="@+id/nameText"
                android:textColor="#222"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#ccc" />

        <!-- Workshop -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <TextView android:text="Workshop"
                android:textColor="#888"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView android:id="@+id/workshopInfoText"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#ccc" />

        <!-- CNIC -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <TextView android:text="CNIC"
                android:textColor="#888"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView android:id="@+id/cnicText"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#ccc" />

        <!-- Expertise -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <TextView android:text="Expertise"
                android:textColor="#888"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView android:id="@+id/expertiseText"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#ccc" />

        <!-- Email -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <TextView android:text="Email"
                android:textColor="#888"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView android:id="@+id/emailText"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#ccc" />

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e0e0e0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:weightSum="4">
        <Button
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Home"
            android:textColor="#2196F3"
            android:background="@android:color/white"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/navLogs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Logs"
            android:textColor="#2196F3"
            android:background="@android:color/white"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Profile"
            android:textColor="#2196F3"
            android:background="@android:color/white"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Settings"
            android:textColor="#2196F3"
            android:background="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
