<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top blue bar -->
    <View
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#389BE6"
        android:layout_alignParentTop="true"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:layout_below="@id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo"
        android:scaleType="fitCenter" />

    <!-- "Login" Title -->
    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Email EditText -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="85%"
        android:layout_height="60dp"
        android:layout_below="@id/loginTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:hint="Email"
        android:padding="16dp"
        android:background="@drawable/edittext_rounded_border"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#A9A9A9"/>

    <!-- Password EditText -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="85%"
        android:layout_height="60dp"
        android:layout_below="@id/emailEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:padding="16dp"
        android:background="@drawable/edittext_rounded_border"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#A9A9A9"/>

    <!-- Forget Password -->
    <TextView
        android:id="@+id/forgetPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/passwordEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"/>

    <!-- Bottom bar background -->
    <View
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="#389BE6"/>

    <!-- Bottom Login Button (over the bar) -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignBottom="@id/bottom_bar"
        android:background="@android:color/transparent"
        android:text="Login"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <!-- Signup row -->
    <LinearLayout
        android:id="@+id/signupRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/bottom_bar"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have account?"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/signupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="22sp"
            android:textColor="#FF2C2C"
            android:textStyle="bold"
            android:paintFlags="underline"/>
    </LinearLayout>

</RelativeLayout>
