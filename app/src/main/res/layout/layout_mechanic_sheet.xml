<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="14dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/sheetAvatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/dummy_pic" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/sheetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ali Raza"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/sheetSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert â€¢ AC"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sheetDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.1 km"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnNavigate"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Navigate with Google Maps"/>
</LinearLayout>
